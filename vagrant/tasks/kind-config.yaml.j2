    extraPortMappings:
      - containerPort: 32000  # NodePort you want to expose
        hostPort: 32000       # Host port to forward to
        protocol: TCP

      - containerPort: 31000  # NodePort you want to expose
        hostPort: 31000       # Host port to forward to
        protocol: TCP

