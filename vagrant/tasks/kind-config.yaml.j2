# kind-config.yaml.j2
kind: Cluster
apiVersion: kind.x-k8s.io/v1alpha4

nodes:
  - role: control-plane
    extraPortMappings:
      # Expose NodePorts for services like Istio or others
      - containerPort: 32000  
        hostPort: 32000      
        protocol: TCP

      - containerPort: 31000 
        hostPort: 31000       
        protocol: TCP

      - containerPort: 30080  
        hostPort: 30080      
        protocol: TCP

      - containerPort: 30443 
        hostPort: 30443      
        protocol: TCP